using System;

namespace _6_30
{
    class Program
    {
        static void Main(string[] args)
        {
            //Дана последовательность вещественных чисел а[0],...,а[10].
            //Подсчитать количество элементов последовательности до второго отрицательного
            //элемента.
            double[] massive = new double[10];
            Random random = new Random();
            int i, count = 0;
            bool first_subzero = false;
            Console.WriteLine("Изначальный массив:");
            for (i = 0; i < 10; i++)
            {
                massive[i] = random.Next(-100, 100);
                Console.Write(massive[i] + " ");
            }
            Console.WriteLine();

            //подсчёт
            for (i = 0; i < 10; i++)
            {
                if (massive[i] < 0)
                    first_subzero = true;
                count += 1;
                if ((massive[i+ 1] < 0) && (first_subzero == true))
                {
                    break;
                }
            }
            Console.WriteLine($"Количество элементов последовательности до второго отрицательного элемента равно {count}");
        }
    }
}
